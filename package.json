{
	"name": "wikidata-misfit-bot",
	"private": true,
	"version": "1.3.0",
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-misfit-bot",
	"author": {
		"name": "Edgar Toll",
		"email": "edjopato@gmail.com",
		"url": "edjopato.de"
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del dist && tsc",
		"start": "ts-node source/index.ts",
		"test": "xo && ava"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"wikidata",
		"wikidataulm"
	],
	"config": {
		"tokenpath": "/run/secrets/wikidata-misfit-bot-token.txt"
	},
	"dependencies": {
		"@sindresorhus/tsconfig": "^0.3.0",
		"telegraf": "^3.27.1",
		"telegram-typings": "^3.6.1",
		"ts-node": "^8.0.3",
		"typescript": "^3.4.1",
		"wikidata-entity-reader": "^1.0.0",
		"wikidata-entity-store": "^1.0.0",
		"wikidata-sdk": "^6.1.0",
		"wikidata-sdk-got": "^1.0.0"
	},
	"devDependencies": {
		"@types/node": "^12.0.2",
		"@typescript-eslint/eslint-plugin": "^1.5.0",
		"ava": "^1.4.1",
		"del-cli": "^1.1.0",
		"eslint-config-xo-typescript": "^0.12.0",
		"xo": "^0.24.0"
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"xo": {
		"semicolon": false,
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"rules": {
			"@typescript-eslint/promise-function-async": "warn",
			"@typescript-eslint/semi": [
				"error",
				"never"
			],
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"source/riddle.*"
				],
				"rules": {
					"camelcase": "off",
					"@typescript-eslint/camelcase": "off"
				}
			}
		]
	}
}
