{
	"name": "wikidata-misfit-bot",
	"private": true,
	"version": "1.2.1",
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-misfit-bot",
	"author": {
		"name": "Edgar Toll",
		"email": "edjopato@gmail.com",
		"url": "edjopato.de"
	},
	"engines": {
		"node": ">=11"
	},
	"scripts": {
		"build": "del dist && tsc",
		"start": "ts-node source/index.ts",
		"test": "xo && ava"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"wikidata",
		"wikidataulm"
	],
	"config": {
		"tokenpath": "/run/secrets/wikidata-misfit-bot-token.txt"
	},
	"dependencies": {
		"got": "^9.6.0",
		"telegraf": "^3.27.1",
		"wikidata-sdk": "^5.15.10"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.2.1",
		"@types/node": "^11.11.3",
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"ava": "^1.3.1",
		"del-cli": "^1.1.0",
		"eslint-config-xo-typescript": "^0.8.0",
		"ts-node": "^8.0.3",
		"typescript": "^3.3.3333",
		"xo": "^0.24.0"
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"xo": {
		"semicolon": false,
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"rules": {
			"@typescript-eslint/promise-function-async": "off",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"source/riddle.*"
				],
				"rules": {
					"camelcase": "off",
					"@typescript-eslint/camelcase": "off"
				}
			}
		]
	}
}
